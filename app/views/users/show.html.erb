<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.games.any? %>
      <h3>Games (<%= @user.possessions.count %>)</h3>
      <ol class="games">
        <%= render @possessions %>
      </ol>
      <%= will_paginate @possessions %>
    <% end %>
	</div>
</div>
